<article class='bullet'>
  <div class='title'>
    <a href='/post/{{id}}'>{{title}}</a>
  </div>
  <div>
    {{format_slug content}}
  </div>
  <div class='meta'>
    <span>by {{user.username}} on {{format_date created_at}}</span>
    |
    <a href='/post/{{id}}'>{{comments.length}}
      {{format_plural 'comment' comments.length}}</a>
  </div>
</article>