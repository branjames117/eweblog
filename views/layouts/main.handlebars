<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Ewe Blog</title>
    <link rel='stylesheet' href='/css/styles.css' />
  </head>

  <body>

    <div class='wrapper'>

      <header>
        <h1>
          <a href='/'>Ewe Blog</a>
        </h1>
        <nav>
          {{#if loggedIn}}
            <a href='/dash'>{{username}}'s dashboard</a>
            <button id='logout' class='btn-no-style'>logout</button>
          {{else}}
            <a href='/login'>login</a>
          {{/if}}
        </nav>
      </header>

      <main>
        {{{body}}}
      </main>

      <footer>
        Thanks for visiting!
      </footer>

    </div>

    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}

  </body>

</html>